<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/actions_padding"
    android:paddingLeft="@dimen/actions_padding_left"
    android:paddingRight="@dimen/actions_padding_left">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/card_content_textview"
        android:autoLink="email|web"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/card_content_button"
        android:text="@string/msg_finish"
        android:background="?android:selectableItemBackground"
        android:textColor="@color/md_orange_500"
        android:layout_width="wrap_content"
        style="@style/card.native.actions"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_content_textview"
        android:layout_alignParentRight="true"
        android:layout_marginTop="12dp" />

</RelativeLayout>